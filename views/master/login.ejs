<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Secure LogIn</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    .col-md-6 {
      height: 94vh;
    }
  </style>
</head>

<body>
  <div class="container head">
    <div class="row ">
      <div class="col-md-6 d-flex align-items-center justify-content-center">
        <img src="/images/login.svg" class="img-fluid w-75" alt="">
      </div>
      <div class="col-md-6 d-flex align-items-center justify-content-center">
        <div>
 
<div class="bg-light p-5 rounded shadow">


 
          <form action="/admin-login" class="needs-validation bg-light p-5 rounded shadow">
 
            <h5>Sign into your account</h5>
            <div class="col-12 my-3">
              <label for="username" class="form-label">Username</label>
              <input type="number" class="rounded-0 w-100 form-control" id="number" placeholder="Your Username" required>
              <div class="invalid-feedback">
                Please enter valid username.
              </div>
            </div>
            <div class="col my-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="rounded-0 form-control" id="password" placeholder="Your Password" required>
              <div class="invalid-feedback">
                Please enter valid password.
              </div>
            </div>
            <div class="w-100 text-center">
              <span id="warn" class="text-danger" style="font-size: 13px;"></span>

            </div>
            <div class="col mt-5">
              <button type="button" onclick="sendData()" class="btn btn-primary w-100">Secure Login</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <p class="text-center">&copy;Plant_Software 2025, <b>A2Z IT HUB PVT LTD.</b></p>
  </div>



  <!-- <input type="number" id="number" placeholder="Your Number" >
    <input type="text" id="password" placeholder="Your Password" >
    <span id="warn" class="text-danger"></span>
    <button type="submit" onclick="sendData()" >Save</button> -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    function sendData() {

      if (document.getElementById("number").value != "" && document.getElementById("password").value != "") {
        obj = {
          "name": document.getElementById('number').value,
          "pass": document.getElementById("password").value
        }
        $.ajax(
          {
            "method": "post",
            "url": "/admin-login",
            "data": obj
          }

        ).done((response) => {
          if (response == 0) {
            console.log(response);
            document.getElementById("warn").innerHTML = "<i class='fa fa-warning'></i>No admin found";
          }
          else {
            location.href = "/";
          }
        }
        )
      }
      else {
        document.getElementById("warn").innerText = "Please fill details";
      }
    }

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>
